<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoIcon"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:cropToPadding="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>




        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_style"
                android:hint="PatientName"
                android:textColor="@color/progresslightcolor"
                android:paddingLeft="10dp"
                android:textColorHint="@color/progresslightcolor" />

            <EditText
                android:id="@+id/edittextMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_style"
                android:hint="@string/mobile"
                android:textColor="@color/progresslightcolor"
                android:inputType="number"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:textColorHint="@color/progresslightcolor" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_style"
                android:hint="@string/hint_email"
                android:textColor="@color/progresslightcolor"
                android:paddingLeft="10dp"
                android:textColorHint="@color/progresslightcolor" />

            <EditText
                android:id="@+id/blood_unit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_style"
                android:hint="BloodUnit"
                android:maxLength="2"
                android:textColor="@color/progresslightcolor"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColorHint="@color/progresslightcolor" />

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/progresslightcolor"
                android:background="@drawable/edittext_style"
                android:hint="Location"
                android:paddingLeft="10dp"
                android:textColorHint="@color/progresslightcolor" />

            <Spinner
                android:id="@+id/spinnerBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/edittext_style"
                android:paddingLeft="10dp"
                android:spinnerMode="dialog"></Spinner>

        </LinearLayout>



    <Button
        android:id="@+id/submit"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@color/progresslightcolor"
        android:text="@string/action_submit"
        android:textColor="@color/white" />


</LinearLayout>